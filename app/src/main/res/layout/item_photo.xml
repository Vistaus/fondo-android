<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="@dimen/card_radius"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardPhoto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/imgPhoto"
                android:contentDescription="@string/content_description_photo_from_unsplash"
                android:scaleType="fitXY"
                android:src="@drawable/back_loading_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop"
                android:transitionName="@string/photo_transition"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/dark_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottomShadow"/>
        <TextView
                tools:text="Autor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAutor"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:shadowColor="@color/darker_gray"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                app:fontFamily="@font/open_sans_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/bottomShadow"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btnSetWall"
                android:layout_marginRight="8dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_share"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btnShare"
                app:layout_constraintTop_toTopOf="@+id/bottomShadow"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_wallpaper"
                android:id="@+id/btnSetWall" app:layout_constraintEnd_toStartOf="@+id/btnShare"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bottomShadow"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/app_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>