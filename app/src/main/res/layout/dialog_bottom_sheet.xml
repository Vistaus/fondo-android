<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp" tools:srcCompat="@drawable/animal"
            android:id="@+id/userPicture"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsername" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userPicture"/>
    <TextView
            android:text="user bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserBio" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername"
            app:layout_constraintStart_toEndOf="@+id/userPicture"/>
    <TextView
            android:text="description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtImgDescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUserBio"
            android:layout_marginTop="32dp" android:drawableLeft="@drawable/ic_text_description"
            android:drawableStart="@drawable/ic_text_description" android:drawablePadding="8dp"/>
    <TextView
            android:text="created at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtImgCreatedAt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtImgDescription"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableStart="@drawable/ic_calendar" android:drawablePadding="8dp"/>
    <TextView
            android:text="width"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtImgWidth" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtImgCreatedAt"
            android:drawableStart="@drawable/ic_arrow_left_right"
            android:drawableLeft="@drawable/ic_arrow_left_right" android:drawablePadding="8dp"/>
    <TextView
            android:text="height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtImgHeight" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtImgWidth" android:drawableLeft="@drawable/ic_arrow_up_down"
            android:drawableStart="@drawable/ic_arrow_up_down" android:drawablePadding="8dp"/>
    <TextView
            android:text="color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtImgColor" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtImgHeight" android:drawableLeft="@drawable/ic_color"
            android:drawableStart="@drawable/ic_color" android:drawablePadding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>